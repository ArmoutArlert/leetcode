class Solution {
public:
    bool isStraight(vector<int>& nums) {

        // 判断
        // 这道题如果想不起来用排序，那么就会很麻烦
        sort(nums.begin(),nums.end());
        int count = 0;
        // 这个判断也是过于麻烦
        for(int i=0;i<nums.size();i++){
            if(nums[i]==0){
                ++count;
            }else if(i>0 && nums[i] == nums[i-1]){       
                return false;
                //注意这个地方要是>count才行
            }else if(i>count && nums[i] > nums[i-1]+1){
                if(count >= (nums[i]-nums[i-1]-1)){
                    count -= nums[i]-nums[i-1]-1;
                }else{         
                    return false;
                }
            }
        }
        return true;   
    }
};


// 大佬的思路：遇到0跳过，然后记录最大值和最小值，最后判断 max-min < 5 ?
